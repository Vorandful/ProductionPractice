<Page x:Class="ProductionPractice.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductionPractice.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="White" Height="100" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1000"/>
                </Grid.ColumnDefinitions>
                <!--Первый столбец (сортировка)-->
                <ComboBox HorizontalAlignment="Left"
                     Margin="10 0 0 0"
                     Style="{StaticResource MaterialDesignFilledComboBox}"
                     materialDesign:HintAssist.Hint=""
                     materialDesign:HintAssist.HelperText="Сортировка"
                     Height="50"
                     Width="270">
                    <ComboBoxItem
                     Content="По возрастанию цены" />
                    <ComboBoxItem
                     Content="По убыванию цены" />
                    <ComboBoxItem
                     Content="по умолчанию" />
                </ComboBox>
                <!--Второй столбец (поиск)-->
                <TextBox
                 x:Name="TBSearch"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 VerticalAlignment="Center"
                 Margin="120 0 0 0"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Width="400"
                 materialDesign:HintAssist.Hint="ПОИСК"/>

                <Border HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 30 0" >
                    <StackPanel>
                        <Button Content="Профиль" Name="ToProfile" Click="ToProfile_Click" Height="50" Width="125"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="230" MaxWidth="280"/>
                <ColumnDefinition MinWidth="490" MaxWidth="1000"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="1" x:Name="LV_Courses" Width="auto" Height="auto">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#eaeaea" MinWidth="500" MinHeight="100" MaxHeight="150" Padding="10">
                    <Border.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="0.5"/>
                    </Border.BitmapEffect>
                    <StackPanel Orientation="Horizontal">
                                <Border Background="White" Padding="5">
                                    <Image Width="100" Height="100" Source="{Binding}"/>
                                    <!-- Картинка курса -->
                                </Border>
                                <Border Background="White" >
                                    <Grid MinWidth="550" MaxWidth="680">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" FontFamily="bold"  Text="{Binding Name}"/>
                                        <!-- Название курса -->
                                        <TextBlock Grid.Row="1" Text="{Binding User.NickName, StringFormat='Автор: {0}'}"/>
                                        <!-- Автор -->
                                        <TextBlock Grid.Row="2" Text="{Binding Length, StringFormat='длительность: {0} часов'}"/>
                                        <!-- Длина курса -->
                                        <TextBlock Grid.Row="3" Text="5"/>
                                        <!-- рейтинг по 5-ти бальной -->
                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Text="{Binding Price}"/>
                                        <!-- Цена -->
                                    </Grid>
                                </Border>
                        
                        
                    </StackPanel>
                </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
            
            <Border Grid.Column="0" Background="White" Padding="10" BorderBrush="Black" BorderThickness="1">
                <StackPanel>
                    <Border>
                        <StackPanel Margin="0 0 0 100">
                            <TextBlock Text="Уровень знаний" FontSize="20" HorizontalAlignment="Center"/>
                            <Button Content="Все уровни" Margin="0 10 0 0"/>
                            <Button Content="Начальный" Margin="0 10 0 0"/>
                            <Button Content="Продвинутый" Margin="0 10 0 0"/>
                            <Button Content="Проффесиональный" Margin="0 10 0 0"/>
                        </StackPanel>
                    </Border>
                    
                    
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>
